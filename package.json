{
  "name": "boq-builder",
  "version": "1.1.9",
  "description": "Bill of Quantities Generator",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build && node scripts/analyze-bundle.js",
    "build:production": "NODE_ENV=production vite build --mode production",
    "build:profile": "vite build --mode production && node scripts/analyze-bundle.js",
    "preview": "vite preview",
    "server": "node server/server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "electron:dev": "npx electron .",
    "electron:build": "npm run build && npx electron .",
    "dist:win": "npm run build && npx electron-builder --win --publish never",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest --config vite.config.test.js",
    "test:run": "vitest run --config vite.config.test.js",
    "test:performance": "vitest run --config vite.config.test.js src/test/performance.test.jsx",
    "test:performance-server": "node server/run-performance-tests.js",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "monitor:performance": "node -e \"console.log('Performance monitoring available in browser console: window.performanceMonitor')\""
  },
  "author": "Nokael",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "immer": "^10.1.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.263.1",
    "papaparse": "^5.5.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "sql.js": "^1.13.0",
    "xlsx": "^0.18.5",
    "zod": "^4.0.14",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "com.nokael.boqbuilder",
    "productName": "BOQ Generator",
    "files": [
      "dist/**/*",
      "main.js",
      "server/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "installerSidebar": "assets/installerSplash.bmp"
    }
  }
}